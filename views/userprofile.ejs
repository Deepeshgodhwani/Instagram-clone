<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
    <link rel="icon" href="../assets/images/instagram-favicon.png" type="image/icon type">

    <title><%=user_profile.name%> (@<%=user_profile.username%>) â€¢ Instagram profile</title>
    <link rel="stylesheet" href="/css/user_profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body onload="toggleLoading()">
    <!-- PROFILE PICTURE UPDATION  -->
    <%if(user.id==user_profile._id){%>   

      <div class="profile-updation-container">
          <div onclick="endProcess()" id="container-background"></div>
          <div id="options-box">
             <div id="box-heading"> <p >Change profile photo</p></div>
              <form class="picture-selection" action="/user/update/profilepicture?id=<%=user_profile._id%>&type=true" enctype="multipart/form-data" method="post" >
                  <label id="label" for="selection-button">Upload Photo</label>
                  <input id="selection-button" type="file" name="avtar"  placeholder="Profile Picture"  ><br> 
              </form>
              <a id="remove-picture"  href="/user/update/profilepicture?id=<%=user_profile._id%>&type=false"> <p >Remove current photo</p></a>
              <div onclick="endProcess()" id="Cancel-process" > <p >Cancel </p></div>
          </div>
      </div>  
   <%}%>


  <%- include('header'); -%>

  <div class="postLoading">
    <div style="padding-left: 18rem; display: flex; align-items: center; column-gap: 14rem;">
        <div style="width: 150px; height: 150px; display: flex; justify-content: center; align-items: center;
        border-radius: 50%; position: relative;">
        <img style="width: 150px; height: 150px; border-radius: 50%;" src="https://aui.atlassian.com/aui/latest/docs/images/avatar-person.svg" alt="">  
        <img style="width: 3rem; position: absolute;" src="../assets/images/loading2.gif">
        </div>
    <img style="width: 2rem; height: 2rem;" src="https://res.cloudinary.com/dynjwlpl3/image/upload/v1675963390/Instagram-clone/loading_lcbqs7.gif">
   </div>
   <div class="brdr">
    <img style="width: 2rem;" src="https://res.cloudinary.com/dynjwlpl3/image/upload/v1675963390/Instagram-clone/loading_lcbqs7.gif">
    <%-include('footer');-%>
   </div>
</div>
<div class="outer-box">
 <div id="profile-container">     
   <div id="box-1">
      <% if(user_profile.avtar){%>
            <img onclick="updateProfile(true)" id="user-picture" src="<%=user_profile.avtar%>" alt="<%=user.name%>" width="200px" height="200px">      
          <%}else{%>
              <form id="form" action="/user/update/profilepicture?id=<%=user_profile._id%>&type=true" enctype="multipart/form-data" method="post" >
                  <label for="selection-button2"><i id="user-avtar" class="fa-solid fa-user"></i> </label>
                  <input  type="file" id="selection-button2" name="avtar" required> 
              </form>

          <%}%>
   </div>    
      <div id="box-2">
          <div id="name">
              <p id="user_name"> <%=user_profile.username%></p>
              <%if(user.id==user_profile._id){%>
                   <a href="/user/editprofile?id=<%=user_profile._id%>"><button id="button_edit_profile">Edit Profile</button></a>
                   <!-- <img  id="settings-logo" src="../assets/images/settings.png"> -->
               <%}else if(following==true){%>
                  <div followers="<%=user_profile.followers.length%>" profileId="<%=user_profile._id%>" class="unFollowBox">
                    <div class="bundle">
                        <a href="/user/direct/inbox?id=<%=user_profile._id%>"><button id="message-button">Message</button></a>
                        <div onclick="toggleUnfollow()" class="unfollowLink" link="/user/tofollow/following?id=<%=user_profile._id%>"><button id="unfollow-">
                            <img src="../assets/images/unfollow-1.png" id="unfollow-logo1">
                            <img  src="../assets/images/unfollow-2.png" id="unfollow-logo2">
                        </button>
                    </div>
                </div>
                </div>
               <%}else{%>
                <div followers="<%=user_profile.followers.length%>" profileId="<%=user_profile._id%>" class="followBox">
                    <div class="bundle">
                        <div onclick="toggleFollow()" class="follow-button" style="text-decoration: none;" link="/user/tofollow/following?id=<%=user_profile._id%>" > <button  id="follow-">Follow</button></div>
                    </div>
                </div>
               <%}%>
          </div>
          <div id="followers">
                 <p id="posts_count"> <b><%=user_profile.posts.length%> </b>posts</p>
                 <p onclick="openList('followers','<%=user_profile._id%>')" id="followers_count"> <b><%=user_profile.followers.length%> </b> followers</p>
                 <p onclick="openList('following','<%=user_profile._id%>')" id="following_count"><b> <%=user_profile.following.length%> </b>following</p>
          </div> 
          <!-- user followers or user followings list  -->
          <div class="outerLayer">
              <div onclick="closed()" class="background"></div>
               <div class="box">
                <div id="header">
                   <p id="Heading"></p> 
                   <i onclick="closed()" class="fa-solid fa-xmark"></i>
                </div>
                <div class="search-Result" >  
                  <img style="position: relative;  width: 20px; z-index: 10000;" class="Loading" src="../assets/images/loading.gif">
                </div>
               </div>
           </div>

          <p id="name-"><%=user_profile.name%></p>

          <div id="bio">
              <%=user_profile.bio%>
          </div>    
      </div>
   </div>   
   <div  id="post-container">
  <%if(user_profile.posts.length==0){%>
      <div id="no-post-box">
          <img id="camera-logo" src="../assets/images/camera.png">
          <p id="no-post">No posts yet</p>
      </div>
  <%}else{%>
       <% for(post of user_profile.posts){%>
        <div id="post">
            <img id="post-image" src="<%=post.content%>"> 
            <div class="hover">
                    <a href="/user/post/postView/<%= post._id%>">
                        <div class="background"></div>
                    </a>
                    <div class="likes"><i class="fa-sharp fa-solid fa-heart"></i><p><%=post.likes.length%></p></div>
                    <div class="comments"><i class="fa-solid fa-comment"></i><p><%=post.comments.length%></p></div>
                </div>
            </div>
       <%}%>
   <%}%>  
    </div>  
    <!-- flash message   -->
    <div id="message"></div>
    
    <%-include('footer');-%>
</div>  



<script src="/js/jquery.js"></script>
<script src="/js/user_profile_ajax.js"></script>
</body>
</html>

